<div class="container">
  <div class="row">
    <%= render "/users/userinfo" %>

    <div class="col-md-8 offset-md-1">
      <h1><%= @game.title %></h1>
      <h5>ジャンル：<%= @genre.name %></h5>
      <p><%= @game.body %></p>

      <h4>新規レビュー投稿</h4>
      <%= form_with model: Review.new do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        <h4>内容</h4>
        <%= f.text_area :body %><br>
        <%= f.submit '投稿', class: "btn btn-success" %>
      <% end %>

      <h4>レビュー一覧</h4>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>内容</th>
          </tr>
        </thead>

        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.title %></td>
              <td><%= review.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table> 
    </div>


  </div>
</div>
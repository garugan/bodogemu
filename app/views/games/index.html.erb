<div class="container mt-4">
  <div class="row">

    <%= render "/users/userinfo" %>

    <div class="col-md-8 offset-md-1">
      <h2 class="mb-4"><i class="fa-solid fa-gamepad mr-2"></i>ゲーム一覧</h2>

      <table class="table table-striped table-hover">
        <thead class="thead-light">
          <tr>
            <th>タイトル</th>
            <th>ジャンル</th>
            <th>評価</th>
          </tr>
        </thead>

        <tbody>
          <% @games.each do |game| %>
            <tr>
              <td>
                <%= link_to game.title, game_path(game.id), class: "text-decoration-none" %>
              </td>
              <td><%= game.genre.name %></td>
              <td>
                <div class="average-rating" data-score="<%= game.average_rating %>"></div>
              </td>
            </tr>
          <% end %>
        </tbody>

        <script>
          document.addEventListener("turbolinks:load", function () {
            $('.average-rating').raty({
              readOnly: true,
              score: function () {
                return $(this).data('score');
              },
              starOff: '<%= image_path("star-off.png") %>',
              starOn:  '<%= image_path("star-on.png") %>',
              starHalf: '<%= asset_path('star-half.png') %>',
              half: true
            });
          });
        </script>

      </table>
    </div>

  </div>
</div>
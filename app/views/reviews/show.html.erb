<div class="container">
  <div class="row">
    <%= render "/users/userinfo" %>

    <div class="col-md-8 offset-md-1">
      <h2><%= @review.title %></h2>
      <p><%= @review.body %></p>
      <p>投稿日：<%= @review.created_at.strftime('%Y/%m/%d') %></p>
      <% if @review.user == current_user %>
        <%= link_to "削除", game_review_path(@review.game, @review), method: :delete %>
      <% end %>
    </div>

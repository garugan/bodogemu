<div class="table-responsive">
  <table class="table table-striped align-middle text-center">
    <thead class="thead-light">
      <tr>
        <th>タイトル</th>
        <th>投稿者</th>
        <th>ゲーム名</th>
        <th>投稿日</th>
      </tr>
    </thead>

  <tbody>
    <% reviews.each do |review| %>
      <tr>
        <td><%= link_to review.title, game_review_path(review.game, review) %></td>
        <td><%= link_to review.user.name, user_path(review.user) if review.user %></td>
        <td><%= link_to review.game.title, game_path(review.game) if review.game %></td>
        <td><%= review.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
</div>
    <thead class="thead-light">
      <tr>
        <th>ジャンル名</th>
      </tr>
    </thead>

    <tbody>
      <% genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, genre_path(genre) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% if @review.review_comments.size == 1 %>
  $('#comments_area').html('<%= j render 'reviews/comments', review: @review %>');
<% else %>
  $("#review-comments-table tbody").append("<%= j render 'review_comments/comment', comment: @review_comment, review: @review %>");
<% end %>
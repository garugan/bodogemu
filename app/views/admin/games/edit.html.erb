<div class="container mt-4">
  <h1>ゲーム編集（管理者）</h1>
  <%= render "/layouts/error_messages", object: @game %>
  <div class="row">
    <div class="col">
      <%= form_with model: [:admin, @game], local: true do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>

        <h4>内容</h4>
        <%= f.text_area :body %>

        <h4>ジャンル</h4>
        <%= f.collection_select :genre_id, Genre.all, :id, :name %>

        <br>
        <%= f.submit '更新' %><br>
      <% end %>

    </div>
  </div>
</div>
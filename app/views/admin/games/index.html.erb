<div class="container mt-4">
  <div class="row">
    <h1 class="col">ゲーム一覧（管理者）</h1>
    <%= link_to new_admin_game_path, class: "btn btn-secondary px-3 py-2 rounded-pill d-inline-flex align-items-center" do %>
      <i class="fa-solid fa-pencil mr-2"></i>作成
    <% end %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>タイトル</th>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @games.each do |game| %>
        <tr>
          <td><%= game.title %></td>
          <td><%= game.genre.name if game.genre %></td>
          <td>
            <%= link_to '詳細', admin_game_path(game.id) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
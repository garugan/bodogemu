<div class="container">
    <h1>ゲーム詳細（管理者）</h1>

    <div class="row">
      <div class="col">
        画像<br>
        タイトル<br>
        内容<br>
        ジャンル
      </div>
      <div class="col">
        <% if @game.image.attached? %>
          <%= image_tag @game.image, class: "img-fluid", width: 300 %>
        <% end %><br>
        <%= @game.title %><br>
        <%= @game.body %><br>
        <%= @game.genre.name %>
      </div>
        <%= link_to '編集', edit_admin_game_path(@game) %><br>
        <%= link_to '削除', admin_game_path(@game), method: :delete, data: { confirm: '本当に削除しますか？' } %> 
    </div>

</div>
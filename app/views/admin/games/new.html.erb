<div class="container">
  <h1>新規ゲーム追加</h1>
  <%= render "/layouts/error_messages", object: @game %>
    <%= form_with model: @game, url: admin_games_path, local: true do |f| %>
      <h4>タイトル</h4>
        <%= f.text_field :title %>

      <h4>内容</h4>
        <%= f.text_area :body %>

      <h4>ジャンル</h4>
        <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %><br>

      <h4>画像</h4>
        <%= f.file_field :image %><br><br>

      <%= f.submit '作成', class: "btn btn-success" %>
    <% end %>

</div>
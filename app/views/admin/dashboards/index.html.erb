<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4"><i class="fa-solid fa-users mr-2"></i>全ユーザー一覧</h2>

      <table class="table table-striped table-hover text-center">
        <thead class="thead-light">
          <tr>
            <th>ID</th>
            <th>名前</th>
            <th>メールアドレス</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <%= link_to "詳細", admin_dashboard_path(user.id), class: "btn btn-sm btn-outline-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table> 
    </div>
  </div>
</div>
<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><i class="fa-solid fa-tags mr-2"></i>ジャンル一覧（管理者）</h2>
    <%= link_to new_admin_genre_path, class: "btn-success px-4 py-2 rounded-pill d-flex align-items-center" do %>
      <i class="fa-solid fa-plus mr-2"></i>作成
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th scope="col">ジャンル名</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center">
              <%= link_to '詳細', admin_genre_path(genre.id), class: "btn btn-outline-primary btn-sm" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container mt-4">
  <h2 class="mb-4 text-center">ジャンル編集（管理者）</h1>

  <%= render "/layouts/error_messages", object: @genre %>

  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= form_with model: [:admin, @genre], local: true do |f| %>

        <div class="mb-3">
          <%= f.label :name, "ジャンル名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= f.submit '更新', class: "btn btn-success px-4" %>
        </div>
        
      <% end %>

    </div>
  </div>
</div>
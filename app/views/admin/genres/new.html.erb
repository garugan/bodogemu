<div class="container mt-4">
  <h2 class="text-center mb-4">新規ジャンル追加</h2>

  <%= render "/layouts/error_messages", object: @genre %>

  <div class="row justify-content-center">
    <div class="col-md-6">

      <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div class="mb-3">
          <%= f.label :name, "ジャンル名", class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="text-center">
          <%= f.submit '作成', class: "btn btn-success px-4" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
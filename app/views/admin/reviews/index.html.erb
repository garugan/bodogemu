<div class="container mt-4">
  <div class="row">
    <div class="col">
      <h2 class="mb-4"><i class="fa-solid fa-comments mr-2"></i>全レビュー一覧</h2>

      <table class="table table-striped table-hover text-center">
        <thead class="thead-light">
          <tr>
            <th>タイトル</th>
            <th>投稿者</th>
            <th>ゲーム</th>
            <th>投稿日</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @reviews.each do |review| %>
            <tr>
              <td><%= review.title %></td>
              <td>
                <%= link_to review.user.name, admin_dashboard_path(review.user), class: "text-decoration-none" %>
              </td>
              <td>
                <%= link_to review.game.title, admin_game_path(review.game), class: "text-decoration-none" %>
              </td>
              <td><%= review.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                <%= link_to "詳細", admin_review_path(review.id), class: "btn btn-sm btn-outline-primary" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table> 
    </div>
  </div>
</div>
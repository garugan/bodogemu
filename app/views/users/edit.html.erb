<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <h3 class="text-center mb-4"><i class="fa-solid fa-user-pen mr-2"></i>ユーザー情報編集</h3>

      <%= render "/layouts/error_messages", object: @user %>

      <%= form_with model: @user, local: true do |f| %>
        <div class="form-group">
          <%= f.label :name, "名前", class: "font-weight-bold" %>
          <%= f.text_field :name, class: "form-control", id: "inputName", autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :profile_image, "プロフィール画像", class: "font-weight-bold" %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: "image/*", id: "inputImage" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, "自己紹介", class: "font-weight-bold" %>
          <%= f.text_area :introduction, class: "form-control", rows: 4, id: "inputIntroduction" %>
        </div>

        <div class="form-group">
          <%= f.label :email, "メールアドレス", class: "font-weight-bold" %>
          <%= f.email_field :email, class: "form-control", id: "email" %>
        </div>

        <div class="text-center">
          <%= f.submit "保存", class: "btn btn-success px-5" %>
        </div>
      <% end %>

      <% if user_signed_in? && @user == current_user && @user.email != "guest@guest.com" %>
        <div class="text-center mt-4">
          <%= link_to "退会", user_path(current_user.id), method: :delete, data: { confirm: "本当に退会しますか？" }, class: "btn btn-danger" %>
        </div>
      <% end %>

    </div>
  </div>
</div>
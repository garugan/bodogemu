<div class="container">
  <div class="row">
    <%= render "userinfo" %>

    <div class="col-md-8 offset-md-1">
      <h1>ユーザー一覧</h1>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>

        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(100,100) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          <tr>
        <% end %>
        </tbody>
      </table> 
    </div>
    
  </div>
</div>
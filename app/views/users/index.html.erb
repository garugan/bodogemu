<div class="container my-4">
  <div class="row">
    <%= render "userinfo" %>

    <div class="col-md-8 offset-md-1">
    <h2 class="mb-4"><i class="fa-solid fa-users mr-2"></i>ユーザー一覧</h2>

      <div class="table-responsive">
        <table class="table table-striped align-middle text-center">
          <thead class="thead-light">
            <tr>
              <th>画像</th>
              <th>名前</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(80, 80), class: "rounded-circle" %></td>
                <td class="align-middle"><%= user.name %></td>
                <td class="align-middle"><%= link_to "投稿レビュー", user_path(user.id), class: "btn btn-outline-primary btn-sm" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
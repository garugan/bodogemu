<div class="container">
  <div class="row">
    <%= render "userinfo" %>

    <div class="col-md-8 offset-md-1">
    <h4>マイレビュー</h4>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>タイトル</th>
        </tr>
      </thead>

      <tbody>
        <% @user.reviews.each do |review| %>
          <% next if review.id.nil? %>
          <tr>
            <td><%= link_to review.title, game_review_path(review) %></td>
          </tr>
        <% end %>
      </tbody>
    </table> 
    </div>
  </div>
</div>